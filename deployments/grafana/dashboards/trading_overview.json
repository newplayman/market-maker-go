{
  "dashboard": {
    "title": "交易总览 - Market Maker",
    "tags": [
      "trading",
      "market-maker"
    ],
    "timezone": "browser",
    "refresh": "5s",
    "schemaVersion": 36,
    "version": 2,
    "panels": [
      {
        "id": 1,
        "title": "实时净值",
        "type": "stat",
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "runner_equity",
            "legendFormat": "Equity",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "decimals": 3,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "red"
                },
                {
                  "value": 0,
                  "color": "green"
                }
              ]
            }
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "reduceOptions": {
            "calcs": [
              "lastNotNull"
            ],
            "values": false
          },
          "orientation": "auto"
        }
      },
      {
        "id": 2,
        "title": "钱包余额",
        "type": "stat",
        "gridPos": {
          "x": 6,
          "y": 0,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "runner_wallet_balance",
            "legendFormat": "Wallet",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "decimals": 3
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "reduceOptions": {
            "calcs": [
              "lastNotNull"
            ],
            "values": false
          }
        }
      },
      {
        "id": 3,
        "title": "净仓位",
        "type": "gauge",
        "gridPos": {
          "x": 12,
          "y": 0,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "runner_position",
            "legendFormat": "Position",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "max": 0.05,
            "min": -0.05,
            "decimals": 4
          }
        }
      },
      {
        "id": 4,
        "title": "风险状态",
        "type": "stat",
        "gridPos": {
          "x": 18,
          "y": 0,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "runner_risk_state",
            "legendFormat": "risk_state",
            "refId": "A",
            "instant": true
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "mappings": [
              {
                "type": "value",
                "options": {
                  "0": {
                    "text": "Normal"
                  },
                  "1": {
                    "text": "Reduce Only"
                  },
                  "2": {
                    "text": "Halted"
                  }
                }
              }
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "green"
                },
                {
                  "value": 1,
                  "color": "orange"
                },
                {
                  "value": 2,
                  "color": "red"
                }
              ]
            }
          }
        },
        "options": {
          "colorMode": "background",
          "reduceOptions": {
            "calcs": [
              "lastNotNull"
            ],
            "values": false
          }
        }
      },
      {
        "id": 5,
        "title": "净值 / 钱包曲线",
        "type": "timeseries",
        "gridPos": {
          "x": 0,
          "y": 4,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "runner_equity",
            "legendFormat": "Equity",
            "refId": "A"
          },
          {
            "expr": "runner_wallet_balance",
            "legendFormat": "Wallet",
            "refId": "B"
          },
          {
            "expr": "runner_unrealized_pnl",
            "legendFormat": "UnrealizedPnL",
            "refId": "C"
          },
          {
            "expr": "runner_realized_pnl",
            "legendFormat": "RealizedPnL",
            "refId": "D"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "decimals": 3
          }
        }
      },
      {
        "id": 6,
        "title": "价格 / Spread",
        "type": "timeseries",
        "gridPos": {
          "x": 12,
          "y": 4,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "runner_mid_price",
            "legendFormat": "Mid",
            "refId": "A"
          },
          {
            "expr": "runner_spread * 10000",
            "legendFormat": "Spread (bps)",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 4
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "Spread (bps)"
              },
              "properties": [
                {
                  "id": "unit",
                  "value": "short"
                }
              ]
            }
          ]
        },
        "yAxes": [
          {
            "format": "short",
            "label": "Price"
          },
          {
            "format": "short",
            "label": "bps"
          }
        ]
      },
      {
        "id": 7,
        "title": "订单与风险事件",
        "type": "timeseries",
        "gridPos": {
          "x": 0,
          "y": 12,
          "w": 12,
          "h": 6
        },
        "targets": [
          {
            "expr": "rate(runner_orders_placed_total[1m])",
            "legendFormat": "Orders/min",
            "refId": "A"
          },
          {
            "expr": "rate(runner_risk_rejects_total[1m])",
            "legendFormat": "Risk Rejects/min",
            "refId": "B"
          },
          {
            "expr": "rate(runner_ws_failures_total[5m])",
            "legendFormat": "WS Failures/5m",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      },
      {
        "id": 8,
        "title": "仓位与 DrainMode",
        "type": "timeseries",
        "gridPos": {
          "x": 12,
          "y": 12,
          "w": 12,
          "h": 6
        },
        "targets": [
          {
            "expr": "runner_position",
            "legendFormat": "Net Exposure",
            "refId": "A"
          },
          {
            "expr": "runner_risk_state",
            "legendFormat": "Risk State",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 4
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "Risk State"
              },
              "properties": [
                {
                  "id": "unit",
                  "value": "short"
                },
                {
                  "id": "custom.transform",
                  "value": "step"
                }
              ]
            }
          ]
        }
      },
      {
        "id": 9,
        "title": "累计手续费",
        "type": "timeseries",
        "gridPos": {
          "x": 0,
          "y": 18,
          "w": 12,
          "h": 6
        },
        "targets": [
          {
            "expr": "runner_fees_total",
            "legendFormat": "Fees",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "decimals": 4
          }
        }
      },
      {
        "id": 10,
        "title": "净值 vs 手续费",
        "type": "timeseries",
        "gridPos": {
          "x": 12,
          "y": 18,
          "w": 12,
          "h": 6
        },
        "targets": [
          {
            "expr": "runner_equity",
            "legendFormat": "Equity",
            "refId": "A"
          },
          {
            "expr": "runner_wallet_balance",
            "legendFormat": "Wallet",
            "refId": "B"
          },
          {
            "expr": "runner_fees_total",
            "legendFormat": "Fees",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "decimals": 3
          }
        }
      }
    ]
  }
}